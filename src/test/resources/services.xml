<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
 	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">
	
	<bean id ="keymgr" class="com.softwareplumbers.dms.rest.server.util.KeyManager" scope="singleton">
		<constructor-arg index="0" value="/tmp/doctane-proxy.keystore"/>
		<constructor-arg index="1" value="password"/>
		<constructor-arg index="2" value="com.softwareplumbers.keymanager.TestSecretKey"/>
		<constructor-arg index="3" value="com.softwareplumbers.keymanager.TestKeyPair"/>
	</bean>

</beans>

